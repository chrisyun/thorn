<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DictMapper">

	<resultMap id="BaseResultMap" type="org.cy.thorn.dd.entity.Dict">
		<id column="DNAME" jdbcType="VARCHAR" property="dname" />
		<result column="DVALUE" jdbcType="VARCHAR" property="dvalue" />
		<result column="SORT" jdbcType="DECIMAL" property="sort" />
		<result column="TYPEID" jdbcType="VARCHAR" property="typeid" />
	</resultMap>

	<sql id="Base_Column_List">
		DNAME, DVALUE, SORT, TYPEID
  	</sql>

	<sql id="Where_Clause">
		<where>
			<if test="typeid != null">
				TYPEID = #{typeid,jdbcType=VARCHAR},
      		</if>
			<if test="dname != null">
				DNAME = #{dname,jdbcType=VARCHAR},
      		</if>
		</where>
	</sql>

	<!-- select -->
	<select id="select" parameterType="hashmap"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from T_SYS_DICT
		<include refid="Where_Clause" />
		order by SORT ASC
	</select>
	
	<select id="selectByPK" parameterType="java.lang.String"
		resultMap="BaseResultMap">
		select 	
		<include refid="Base_Column_List" />
		from T_SYS_DICT where DNAME = #{dname,jdbcType=VARCHAR}
	</select>
	
	
	<!-- delete by pks -->
	<delete id="deleteByPKs">
		delete from T_SYS_DICT where DNAME in
		<foreach collection="list" item="item" open="(" close=")"
			separator=",">
			#{dname,jdbcType=VARCHAR}
		</foreach>
	</delete>

	<delete id="deleteByTypeIds">
		delete from T_SYS_DICT where TYPEID in
		<foreach collection="list" item="item" open="(" close=")"
			separator=",">
			#{typeid,jdbcType=VARCHAR}
		</foreach>
	</delete>

	<!-- insert -->
	<insert id="insert" parameterType="org.cy.thorn.dd.entity.Dict">
		insert into T_SYS_DICT
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="dname != null">DNAME,</if>
			<if test="dvalue != null">DVALUE,</if>
			<if test="sort != null">SORT,</if>
			<if test="typeid != null">TYPEID,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="dname != null">#{dname,jdbcType=VARCHAR},</if>
			<if test="dvalue != null">#{dvalue,jdbcType=VARCHAR},</if>
			<if test="sort != null">#{sort,jdbcType=DECIMAL},</if>
			<if test="typeid != null">#{typeid,jdbcType=VARCHAR},</if>
		</trim>
	</insert>

	<update id="update" parameterType="org.cy.thorn.dd.entity.Dict">
		update T_SYS_DICT
		<set>
			<if test="dvalue != null">DVALUE = #{dvalue,jdbcType=VARCHAR},</if>
			<if test="sort != null">SORT = #{sort,jdbcType=DECIMAL},</if>
			<if test="typeid != null">TYPEID = #{typeid,jdbcType=VARCHAR},</if>
		</set>
		where DNAME = #{dname,jdbcType=VARCHAR}
	</update>

</mapper>